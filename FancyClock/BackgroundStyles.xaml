<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BG1" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#07314E" Offset="0.0"/>
        <GradientStop Color="#A2701B" Offset="1.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BG2" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#E5D68A" Offset="1.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BG3" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E67E22" Offset="0.0"/>
        <GradientStop Color="Beige" Offset="1.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BG4" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#CB4335" Offset="0.0"/>
        <GradientStop Color="#FF898B" Offset="1.5"/>
    </LinearGradientBrush>

</ResourceDictionary>